@model IEnumerable<WebApplicationBiblioteca.Models.Autor>
@{
    ViewBag.Title = "Autores";
}

<p>
    @Html.ActionLink("Cadastrar Novo Autor", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Ações
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>

             
                @Html.ActionLink("Detalhes", "Details", new { id = item.AutorId }, new { @class = "btn btn-success" })
                @Html.ActionLink("Excluir", "Delete", new { id = item.AutorId }, new { @class = "btn btn-success" })
            </td>
        </tr>
    }
</table>
