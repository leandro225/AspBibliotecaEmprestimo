@model IEnumerable<WebApplicationBiblioteca.Models.Livro>
@{
    ViewBag.Title = "Index";
}

<h2>Livros Cadastrados Na  Biblioteca</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Livro", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor.Nome)
        </th>
        <th>
            Ações
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor.Nome)
        </td>
        <td>


            @Html.ActionLink("Excluir", "Delete", new { id = item.LivroID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Voltar", "Create", new { id = item.LivroID }, new { @class = "btn btn-success" })

        </td>
    </tr>
    }
</table>
