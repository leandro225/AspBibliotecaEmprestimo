@model IEnumerable<WebApplicationBiblioteca.Models.Livro>
@{
    ViewBag.Title = "Index";
}

<h2 style="color:aliceblue">Livros Cadastrados Na  Biblioteca</h2>



<table class="table" style="color:aliceblue">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor.Nome)
        </th>
        <th>
            Opções
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ISBN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor.Nome)
        </td>
        <td>

            @Html.ActionLink("Excluir", "Delete", new { id = item.LivroID }, new { @class = "btn btn-success" })
            @Html.ActionLink("Editar", "Edit", new { id = item.LivroID }, new { @class = "btn btn-success" })           

        </td>
    </tr>
    }
</table>
<div>

    @Html.ActionLink("Voltar", "Create", new { id = 1 }, new { @class = "btn btn-success" })
</div>