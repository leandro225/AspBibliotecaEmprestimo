@model WebApplicationBiblioteca.Models.Livro
@{
    ViewBag.Title = "Excluir";
}

<h3 style="color:aliceblue">Deseja Excluir Este Livro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal" style="color:aliceblue">

        <dt>
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Titulo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Autor.Nome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Autor.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="alert-danger">
            <input class="btn btn-primary" type="submit" value="Excluir">

            @Html.ActionLink("Voltar", "Index", new { id = 1 }, new { @class = "btn btn-success" })

        </div>

    }
</div>
