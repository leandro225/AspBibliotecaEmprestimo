@model WebApplicationBiblioteca.Models.Emprestimo
@{
    ViewBag.Title = "Empréstimo";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

    </div>
  
        <div class="form-group" style="color:#ffffff;">
            @Html.LabelFor(model => model.LivroID, "Livro", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LivroID, (SelectList)ViewBag.LivroId, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LivroID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="color:#ffffff;">
            @Html.LabelFor(model => model.PessoaEmprestimo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PessoaEmprestimo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PessoaEmprestimo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="color:#ffffff;">
            @Html.LabelFor(model => model.DataEmprestimo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DataEmprestimo, new { type = "date", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataEmprestimo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="color:#ffffff;">
            @Html.LabelFor(model => model.DataDevolucao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DataDevolucao, new { type = "date", htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DataDevolucao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="color:#ffffff;">
            <div class="col-md-offset-2 col-md-10">

                <input class="btn btn-primary" type="submit" value="Salvar">
            </div>
        </div>
        }
        <div>
            @Html.ActionLink("Listar", "Index", new { id = 1 }, new { @class = "btn btn-success" })

        </div>

